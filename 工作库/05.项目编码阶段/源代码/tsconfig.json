{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "jsx": "preserve",
    "types": [
      "vite/client"
    ],
    "paths": {
      "@packages/*": [
        "./packages/*/src/"
      ],
      "@/*": [
        "./apps/editor/src/*"
      ]
    }
  },
  "include": [
    "./env.d.ts",
    "apps/**/src/**/*",
    "packages/**/src/**/*",
  ]
}